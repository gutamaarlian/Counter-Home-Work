<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:weightSum="100"
    tools:context=".LinearLayout">


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0275d8"
        android:text="Toast"
        android:onClick="toastClick"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:background="#FAF1F1"
        android:backgroundTint="#F6F6F6"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tambah2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:backgroundTint="#d9534f"
            android:onClick="kurangClick"
            android:text="- Kurang"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:backgroundTint="#5cb85c"
            android:onClick="tambahClick"
            android:text="+ Tambah"
            android:textColor="#FFFFFF" />


    </LinearLayout>

    <EditText
        android:id="@+id/inp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />


</LinearLayout>